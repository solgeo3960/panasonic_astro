---
import { Image } from "astro:assets";
import Megamenu1 from "./Megamenu1.astro";
import Megamenu1Sp from "./Megamenu1Sp.astro";
import Megamenu2 from "./Megamenu2.astro";
import Megamenu2Sp from "./Megamenu2Sp.astro";
import Megamenu3 from "./Megamenu3.astro";
import Megamenu3Sp from "./Megamenu3Sp.astro";
import Megamenu4 from "./Megamenu4.astro";
import Megamenu4Sp from "./Megamenu4Sp.astro";
---

<header class="header">
  <div class="header-top">
    <div class="logos">
      <div class="logo-panasonic">
        <a href="/">
          <Image
            src="/src/assets_2025/images/common/piw.svg"
            alt="Panasonic"
            width="135"
            height="30"
          />
        </a>
      </div>
      <div class="clear-cache">
        Please note: If there are problems with the display, please "<a
          href="/brandmanagement/link/mente/20220901_jp.pdf"
          target="_blank">clear your browsing data</a
        >".
      </div>
      <div class="logo-panasonic-sub">
        <a href="/">
          <Image
            src="/src/assets_2025/images/common/logo.svg"
            alt="Panasonic"
            width="135"
            height="20"
          />
        </a>
      </div>
    </div>
  </div>

  <div class="header-middle">
    <div class="onlypc">
      <div class="header-middle-inner">
        <div class="site-name">Brand Expression Guidelines</div>
        <div class="header-search">
          <form action="/search/index.php" method="post">
            <div class="header-search-input">
              <img src="/src/assets_2025/images/common/search.svg" alt="検索" />
              <input
                id="searchInput"
                type="text"
                placeholder="What are you looking for?Please Enter! "
                name="keyword"
                autocomplete="off"
              />
            </div>
            <div class="info-icon">
              <img src="/src/assets_2025/images/common/info.svg" alt="情報" />
              <div class="pop-up-dialog">
                <div class="pop-up-dialog__content">
                  <strong class="pop-up-dialog__title"
                    >How to Use the Search Function</strong
                  >
                  <ul>
                    <li>
                      Enter the keywords you want to search for in the entry
                      field. Use the tab to narrow down the search results.
                    </li>
                    <li>
                      It is possible to specify a category, refine your search,
                      or exclude specified keywords in the search results
                      window.
                    </li>
                    <li>
                      The titles of pages that contain the keywords you are
                      searching for are displayed.
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            <input type="hidden" name="lang" value="en" />
            <div id="suggest">
              <span> </span>
            </div>
          </form>
        </div>
        <div class="sub_navis">
          <div class="sub_navi">
            <a href="/en/guidelines/gl_ab_scope_en.html" class="sub_navi-link">
              <span>FAQ</span>
            </a>
          </div>
          <div class="sub_navi">
            <a
              href="/en/guidelines/gl_ab_positioning_en.html"
              class="sub_navi-link"
            >
              <span>Brand Inquiry & Approval</span>
            </a>
          </div>
          <div class="sub_navi">
            <ul class="lang-switcher">
              <li>
                <a href="" id="lang01">
                  <span
                    ><img
                      src="/src/assets_2025/images/common/arrow.svg"
                      alt="Japanese"
                      width="12"
                      height="12"
                    />Japanese</span
                  >
                </a>
              </li>
              <li>
                <a href="" id="lang02">
                  <span
                    ><img
                      src="/src/assets_2025/images/common/arrow.svg"
                      alt="Chinese"
                      width="12"
                      height="12"
                    />Chinese</span
                  >
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="sptab">
      <div class="header-middle-inner">
        <div class="humberger js-humberger">
          <span></span>
          <span></span>
          <span></span>
        </div>
        <div class="site-name">Brand Expression Guidelines</div>
        <div class="header-search-icon">
          <img src="/src/assets_2025/images/common/search.svg" alt="検索" />
        </div>
      </div>
    </div>
  </div>
  <div class="header-bottom">
    <div class="header-bottom-inner">
      <div class="container">
        <div class="sptab">
          <div class="sptab-title">
            <h2>Brand Expression Guidelines</h2>
            <div class="close_btn js-close_btn">
              <img
                src="/src/assets_2025/images/common/spClose.svg"
                alt="閉じる"
              />
            </div>
          </div>
        </div>
        <nav class="main-nav">
          <ul class="main-nav-lists">
            <li class="onlypc"><a href="/" class="main-nav-link">HOME</a></li>
            <li class="mega-menu-trigger" data-mega-menu-id="mega-menu-01">
              <a href="#" class="main-nav-link"
                >Brand Expression Guidelines / Logos
              </a>
              <div class="sptab">
                <Megamenu1Sp />
              </div>
            </li>
            <li class="mega-menu-trigger" data-mega-menu-id="mega-menu-02">
              <a href="#" class="main-nav-link">
                Corporate Rules & Standards / Approval Procedure</a
              >

              <div class="sptab">
                <Megamenu2Sp />
              </div>
            </li>
            <li class="mega-menu-trigger" data-mega-menu-id="mega-menu-03">
              <a href="#" class="main-nav-link">FAQ / E-learning</a>
              <div class="sptab">
                <Megamenu3Sp />
              </div>
            </li>
            <li class="mega-menu-trigger" data-mega-menu-id="mega-menu-04">
              <a href="#" class="main-nav-link">Other Related Information</a>
              <div class="sptab">
                <Megamenu4Sp />
              </div>
            </li>
          </ul>
          <div class="sp">
            <div class="sp-nav_linkboxs">
              <div class="sp-nav_linkbox">
                <a href="/guidelines/gl_ab_scope.html">FAQ</a>
              </div>
              <div class="sp-nav_linkbox">
                <a href="/guidelines/gl_ab_positioning.html"
                  >Brand Inquiry & Approval</a
                >
              </div>
            </div>

            <ul class="lang-switcher">
              <li>
                <a href="" id="lang01">
                  <span
                    ><img
                      src="/src/assets_2025/images/common/arrow-sp-blue.svg"
                      alt="English"
                      width="12"
                      height="12"
                    />English</span
                  >
                </a>
              </li>
              <li>
                <a href="" id="lang02">
                  <span
                    ><img
                      src="/src/assets_2025/images/common/arrow-sp-blue.svg"
                      alt="Chinese"
                      width="12"
                      height="12"
                    />Chinese</span
                  >
                </a>
              </li>
            </ul>
          </div>
        </nav>
      </div>
    </div>
    <div class="mega-menus onlypc">
      <Megamenu1 />
      <Megamenu2 />
      <Megamenu3 />
      <Megamenu4 />
    </div>
  </div>
</header>
<div class="menu-overlay"></div>
