---
import {
  brandManagementLinks,
  companyNoticeLinks,
  brandHistoryLinks,
  otherCompanyLinks,
  surveyListLinks,
  panasonicBrandSurveyLinks,
  externalBrandSurveyLinks,
} from "../../data/headerLinks4";
---

<div class="mega-menu mega-menu-sp">
  <div class="accordions">
    <div class="accordion">
      <div class="accordion-header js-accordion-header">
        <h3 class="">全公司品牌管理推进体制
        </h3>
        <div class="accordion-content">
          <ul>
            {
              brandManagementLinks.map((item) => (
                <li>
                  <a href={item.urlZh}>{item.textZh}</a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
      <div class="accordion">
        <div class="accordion-header js-accordion-header">
          <h3>全公司通知集
          </h3>
        </div>
        <div class="accordion-content">
          <ul>
            {
              companyNoticeLinks.map((item) => (
                <li>
                  <a href={item.urlZh}>{item.textZh}</a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
      <div class="accordion">
        <div class="accordion-header js-accordion-header">
          <h3>Panasonic品牌的历史
          </h3>
        </div>
        <div class="accordion-content">
          <ul>
            {
              brandHistoryLinks.map((item) => (
                <li>
                  <a href={item.urlZh}>{item.textZh}</a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
      <div class="accordion">
        <div class="accordion-header js-accordion-header">
          <h3>其他公司事例集
          </h3>
        </div>
        <div class="accordion-content">
          <ul>
            {
              otherCompanyLinks.map((item) => (
                <li>
                  <a href={item.urlZh}>{item.textZh}</a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
      <div class="accordion">
        <div class="accordion-header js-accordion-header">
          <h3>各种调查结果
          </h3>
        </div>
        <div class="accordion-content">
          <ul>
            {
              surveyListLinks.map((item) => (
                <li>
                  <a href={item.urlZh}>{item.textZh}</a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
      <div class="accordion">
        <div class="accordion-header js-accordion-header">
          <h3>Panasonic品牌调查
          </h3>
        </div>
        <div class="accordion-content">
          <ul>
            {
              panasonicBrandSurveyLinks.map((item) => (
                <li>
                  <a href={item.urlZh}>{item.textZh}</a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
      <div class="accordion">
        <div class="accordion-header js-accordion-header">
          <h3>外部品牌调查
          </h3>
        </div>
        <div class="accordion-content">
          <ul>
            {
              externalBrandSurveyLinks.map((item) => (
                <li>
                  <a href={item.urlZh}>{item.textZh}</a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
